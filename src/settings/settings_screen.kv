<settingsDefaultScreen>:
    orientation: "vertical"

    MDTopAppBar:
        id: settings_top_bar
        title: "Settings"
        pos_hint: {"top": 1}
        elevation: 0
        left_action_items: [["arrow-left-bold", lambda x: app.navigate_to_home()]]

    MDFloatLayout:
        id: settings_content
        size_hint: None, None
        height: root.height - settings_top_bar.height
        width: root.width

        MDBoxLayout:
            id: settings_search
            orientation: "horizontal"
            size_hint: 1, None
            pos_hint: {"top": .989}
            padding:[dp(10), 0]
            size_hint_y:None
            height:dp(60)
            radius:[self.height / 2]*4
            padding:[dp(10), dp(10)]
            spacing:dp(10)
            
            MDIconButton:
                size_hint_y:1
                icon:"magnify"
                size_hint_x:None
                width:self.height*1.3
                pos_hint: {"center_y": 0.65}
            MDTextField:
                id: search_field
                hint_text: "Search Settings"
                mode: "rectangle"
                on_text: root.on_search_field_text_change(self.text)

        ScrollView:
            size_hint: 1, None
            height: root.height - settings_search.height
            pos_hint: {"top": (root.height - (settings_search.height + dp(10)))/root.height}

            MDBoxLayout:
                id: sub_settings_list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 7
                padding: [dp(14), 0]
