<settingsDefaultScreen>:
    orientation: "vertical"

    MDTopAppBar:
        id: settings_top_bar
        title: "Settings"
        pos_hint: {"top": 1}
        elevation: 0
        left_action_items: [["arrow-left-bold", lambda x: app.navigate_to_home()]]

    MDFloatLayout:
        id: settings_content
        size_hint: None, None
        height: root.height - settings_top_bar.height
        width: root.width

        MDBoxLayout:
            id: settings_search
            orientation: "horizontal"
            size_hint: 1, None
            pos_hint: {"top": .989}
            padding:[dp(10), 0]
            size_hint_y:None
            height:dp(60)
            radius:[self.height / 2]*4
            padding:[dp(10), dp(10)]
            spacing:dp(10)
            
            MDIconButton:
                size_hint_y:1
                icon:"magnify"
                size_hint_x:None
                width:self.height*1.3
                pos_hint: {"center_y": 0.65}
            MDTextField:
                hint_text: "Search Settings"
                mode: "rectangle"

        ScrollView:
            size_hint: 1, None
            height: root.height - settings_search.height
            pos_hint: {"top": (root.height - (settings_search.height + dp(10)))/root.height}

            MDBoxLayout:
                id: sub_settings_list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

                SettingsItem:
                    icon: "cash-sync"
                    text: "Currency"
                    subtext: "todo"
                    on_release: app.settings.screen_manager.current = "Currency"
                SettingsItem:
                    icon: "format-text"
                    text: "Format Currency Values"
                    subtext: "todo"
                    on_release: app.settings.screen_manager.current = "Format Currency Values"
                SettingsItem:
                    icon: "invert-colors"
                    text: "Look & Feel"
                    subtext: "todo"
                    on_release: app.settings.screen_manager.current = "Look & Feel"
                SettingsItem:
                    icon: "sync"
                    text: "Synchronisation"
                    subtext: "todo"
                    on_release: app.settings.screen_manager.current = "Synchronisation"
                SettingsItem:
                    icon: "information-variant-circle"
                    text: "About"
                    subtext: "todo"
                    on_release: app.settings.screen_manager.current = "About"
