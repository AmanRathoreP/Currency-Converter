<settingsScreen>:
    MDTopAppBar:
        title: "Settings of Currency Converter"
        pos_hint: {"top": 1}
        elevation: 0
        left_action_items: [["assets/icons/left-arrow.png", lambda x: app.navigate_to_home()]]

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDIcon:
            icon:"assets/icons/work-in-progress.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            font_size : 300

        MDLabel:
            text: "Settings Screen of Currency Converter"
            halign: 'center'
            font_size: 44

        MDRaisedButton:
            text: "Toggle Theme"
            pos_hint: {"center_x": 0.5}
            on_press: root.toggle_theme()
