<infoLabel>:
    size_hint_y:None
    height:dp(20 + 40 + 20) # 20 for inernal spacing, 40 for label title name and, 20 for description
    padding:dp(10)
    spacing:dp(10)
    ripple_behavior: True
    md_bg_color: (*app.theme_cls.primary_color[:3], 0.3)
    ripple_color: (*app.theme_cls.accent_color[:3], 0.25)

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: root.height

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            size_hint_y: None
            height: dp(40)
            MDLabel:
                id: title
                font_style: "H6"

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint_y: None
            height: dp(20)
          
            MDLabel:
                id: description
                font_style: "Body1"
                text: "sample text"
