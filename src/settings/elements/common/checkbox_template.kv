<customCheckBox>:
    size_hint_y:None
    height:dp(60)
    padding:dp(10)
    spacing:dp(10)
    ripple_behavior: True
    md_bg_color: (*app.theme_cls.primary_color[:3], 0.3)
    ripple_color: (*app.theme_cls.accent_color[:3], 0.25)

    MDLabel:
        id: label_option_name
        font_size: 26

    MDCheckbox:
        id: boolean
        size_hint: None, None
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release: root.on_box_clicked()

    MDBoxLayout:
        id: check_box_with_parent_container
        orientation: "vertical"
        adaptive_height: True
        padding: "12dp", "36dp", 0, 0
        spacing: "12dp"
    
        MDLabel:
            id: "label_option_name"
            font_size: 26
