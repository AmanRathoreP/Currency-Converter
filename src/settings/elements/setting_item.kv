<SettingsItem>:
    icon:"assets\icons\work-in-progress.png"
    text:"Setting's category"
    subtext:"Setting's subtext"
    size_hint_y:None
    height:dp(20 + 40 +(15*4)) # 20 for inernal spacing, 40 for setting name and 15 for each search info, and 20 for setting info
    padding:dp(10)
    spacing:dp(10)
    on_release: app.settings.screen_manager.current = root.text
    ripple_behavior: True
    md_bg_color: (*app.theme_cls.primary_color[:3], 0.3)
    ripple_color: (*app.theme_cls.accent_color[:3], 0.25)

    MDIconButton:
        style: "tonal"
        size_hint:None, 1
        icon:root.icon

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: root.height

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"
            size_hint_y: None
            height: dp(40)
            MDLabel:
                id: setting_name
                text: root.text
                font_style: "H6"

        AnchorLayout:
            id: setting_infos_layout
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint_y: None
            height: dp(15*4)
          
            MDBoxLayout:
                id: setting_infos
                orientation: "vertical"

                MDLabel:
                    font_style: "Body2"
                    text: "sample text"
                MDLabel:
                    font_style: "Body2"
                    text: "sample text"
                MDLabel:
                    font_style: "Body2"
                    text: "sample text"
                MDLabel:
                    font_style: "Body2"
                    text: "sample text"
