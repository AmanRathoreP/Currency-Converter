<IndividualCurrencyItem>:
    icon:"assets\icons\work-in-progress.png"
    text:"Sample currency"
    name:"INR"
    size_hint_y: None
    height: currency_text.texture_size[1] + dp(22)
    padding: [dp(10), 0, dp(10), 0] # [left, top, right, bottom]
    ripple_behavior: True
    md_bg_color: (*app.theme_cls.primary_color[:3], 0.3)
    ripple_color: (*app.theme_cls.accent_color[:3], 0.25)

    MDLabel:
        id: currency_text
        text: root.text
        font_style: "H6"

    MDLabel:
        id: currency_name
        text: root.name + "  "
        font_style: "H6"
        valign: 'center'
        halign: 'right'
        text_size: self.width, None
        size_hint_x: None
    
    Image:
        id: currency_image
        size_hint: None, None
        size: [50, 50]
        source: root.icon
        pos_hint: {'center_y': 0.5}  # Center the image vertically
